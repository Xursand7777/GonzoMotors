platform :ios, '15.0'

# Enable modular headers for some Swift Firebase pods that require module maps
use_modular_headers!

# Prefer FLUTTER_ROOT environment variable, fallback to common user path
flutter_sdk_path = ENV['FLUTTER_ROOT'] || File.expand_path('~/Library/Developer/flutter')
require File.join(flutter_sdk_path, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
